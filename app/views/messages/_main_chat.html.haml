.chat-main
  .chat-main__group-info
    .chat-main__group-info__group-box
      .chat-main__group-info__group-box__group-name
        = @group.name
      .chat-main__group-info__group-box__group-member
        Member:
        - @group.users.each do |users|
          =users.name
    .chat-main__group-info__group-edit
      =link_to edit_group_path(@group.id) ,class:"edit" do
        Edit

  .chat-main__message-list
    = render @messages

  .chat-main__message-forms
    = form_for [@group, @message], html: {class: "new_message"} do |f|
      .chat-main__message-forms__text
        = f.text_field :content, class: 'chat-main__message-forms__text__input', placeholder: 'type a message'
        .chat-main__message-forms__text__picture
          = f.label :image, class: 'picture' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'form'
      = f.submit 'Send', class: 'chat-main__message-forms__send' 

              