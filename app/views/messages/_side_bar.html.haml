.side-bar
  .side-bar__user-name
    .side-bar__user-name__icon-box
      .side-bar__user-name__icon-box__name
        = current_user.name
      .side-bar__user-name__icon-box__menu
        .side-bar__user-name__icon-box__menu__new-group
          =link_to edit_user_path(current_user)  do
            =icon('fas','cog')
        .side-bar__user-name__icon-box__menu__edit-user
          =link_to new_group_path do
            =icon('fas','edit')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(current_user)  do
          .group__name
            = group.name
          .new__message
